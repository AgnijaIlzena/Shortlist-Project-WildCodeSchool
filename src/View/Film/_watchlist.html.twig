{% for film in films %}
    <div class="col-md-6 watchlist-container" >
        <div class="watchlist-card card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
                <h4 class="my-0 fw-normal">Genre {{ film.genre  }}: {{ film.title }}</h4>
            </div>
            <div class="card-body">
                <div class="col-lg-12 wow fadeIn d-block video-container">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="{{ film.url }}" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="description-watchlist col-lg-12">
                <p > {{ film.description }}</p>
            </div>
            <form action="/user/films/delete" method="POST">
                <input type="hidden" name="id" value="{{ film.id }}">
                <div class="col-6-lg">
                    <button type="submit" class="w-50 btn btn-secondary watch">Delete</button>
                </div>
            </form>
        </div>
    </div>
{% else %}
    <h4 class="my-0 fw-normal"> You have no records saved .  </h4>
</section>
